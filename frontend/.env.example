# Pagination
VITE_ITEMS_PER_PAGE=12

# Map Configuration (if using maps)
VITE_MAPS_API_KEY=your_maps_api_key_here

# Analytics (optional)
VITE_ANALYTICS_ID=your_analytics_id_here
